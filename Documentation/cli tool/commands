################################
> Commands
################################
- tool name
    - custom-text-helper
    - EX: cth config:msread set endpoint-url {value}

- help/commands
    - list all commands 

- config
    - command patterns
        - tool config
        - tool config:set:{service} --key {value}
        - tool config:show:{service}
    - msread
        - tool config:show:msread
        - tool config:set:msread --azure-resource-key {AZURE_RESOURCE_KEY} --endpoint-url {ENDPOINT_URL}
    - tika
        - tool config:show:tika
        - tool config:set:tika --enable-ocr {BOOLEAN} --detect-titlted-text {BOOLEAN} --sort-by-position {BOOLEAN}
    - storage
        - tool config:show:storage
        - tool config:set:storage:local --source-dir {ABSOLUTE_PATH} --destination-dir {ABSOLUTE_PATH} 
        - tool config:set:storage:blob --source-container {CONTAINER_NAME} --destination-container {CONTAINER_NAME} 
    - chunker
        - tool config:show:chunker
        - tool config:set:chunker --char-limit {NUMBER}
    - prediction
        - tool config:show:prediction
        - tool config:set:prediction --endpoint-url {ENDPOINT_URL} --apim-subscription-key {APIM_SUBSCRIPTION_ID} --app-id {APP_ID} --version-id {VERSION_ID}


- parsing
    - tool parse --parser {MSREAD/TIKA} --source {BLOB/LOCAL} --destination {BLOB/LOCAL} --chunking-type {PAGE/CHAR}

- prediction
    - tool prediction --parser {MSREAD/TIKA} --source {BLOB/LOCAL} --file-name {FILENAME} --chunking-type {PAGE/CHAR}

- chunker
    - tool chunker --source {BLOB/LOCAL} --destination {BLOB/LOCAL} --char-limit {CHAR-LIMIT}